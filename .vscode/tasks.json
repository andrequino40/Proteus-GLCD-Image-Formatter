{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "(Debug) G++ build file", 
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "detail": "Build task G++"
        },
        {
            "type": "cppbuild",
            "label": "p2++ build", 
            "command": "/usr/bin/g++",
            "args": [
                "-D_GLIBCXX_DEBUG", "-O2", "-Wall", "-Wextra", "-Werror", "-Wno-sign-compare", "-std=c++11", "-fno-extended-identifiers",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build task for G++ with flags"
        },
